<launch>

	<!-- rviz -->
	<arg name="rviz"                    default="true"/>
	<arg name="rviz_cfg"                default="$(find-pkg-share bag_handle_estimator)/config/rviz/bag_handle.rviz"/>
	
	<node pkg="bag_handle_estimator" exec="handle_estimator" output="screen">
		<param name="execute_default" value="true"/>
		<param name="pub_plane_cloud" value="true"/>

		<param name="sub_point_topic_name" value="/camera/camera/depth/color/points"/>
		<param name="base_frame_name" value="base_footprint"/>

		<!-- depth range -->
		<param name="depth_range_min_x" value="0.0"/>
		<param name="depth_range_max_x" value="0.5"/>
		<!-- width range -->
		<param name="depth_range_min_y" value="-0.3"/>
		<param name="depth_range_max_y" value="0.3"/>
		<!-- height range -->
		<param name="depth_range_min_z" value="0.0"/>
		<param name="depth_range_max_z" value="0.5"/>
    </node>
	
	<node if="$(var rviz)" pkg="rviz2" exec="rviz2" args="-d $(var rviz_cfg)"/>

</launch>
